<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- For development - allow cleartext HTTP -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.1.5</domain>
        <domain includeSubdomains="true">localhost</domain>
    </domain-config>

    <!-- Production domains should use HTTPS -->
    <domain-config>
        <domain includeSubdomains="true">your-app.onrender.com</domain>
        <domain includeSubdomains="true">your-app.railway.app</domain>
    </domain-config>
</network-security-config>